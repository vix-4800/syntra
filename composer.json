{
    "name": "vix/syntra",
    "description": "Syntra â€” unified CLI for PHP project health checks, code refactoring, and extensible framework integrations.",
    "type": "library",
    "license": "MIT",
    "version": "2.5.0",
    "keywords": [
        "php",
        "cli",
        "health-check",
        "refactor",
        "phpstan",
        "php-cs-fixer",
        "rector",
        "extension"
    ],
    "homepage": "https://github.com/vix-4800/syntra",
    "authors": [
        {
            "name": "Anton Vix",
            "email": "Gordan.ei@protonmail.ch",
            "homepage": "https://github.com/vix-4800",
            "role": "maintainer"
        }
    ],
    "support": {
        "issues": "https://github.com/vix-4800/syntra/issues",
        "source": "https://github.com/vix-4800/syntra",
        "docs": "https://github.com/vix-4800/syntra/blob/main/README.md"
    },
    "require": {
        "php": "^8.2",
        "psr/container": "^2.0",
        "symfony/console": "^5.4 || ^6.0 || ^7.0",
        "symfony/process": "^5.4 || ^6.0 || ^7.0",
        "symfony/filesystem": "^5.4 || ^6.0 || ^7.0",
        "nikic/php-parser": "^4.15"
    },
    "autoload": {
        "psr-4": {
            "Vix\\Syntra\\": "src/"
        },
        "files": [
            "./helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Vix\\Syntra\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "phpunit/phpunit": "Required for running tests",
        "rector/rector": "Required for code refactoring",
        "phpstan/phpstan": "Required for static analysis",
        "friendsofphp/php-cs-fixer": "Required for code style fixes"
    },
    "bin": [
        "bin/syntra"
    ],
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "lint": "php-cs-fixer fix --dry-run"
    },
    "scripts-descriptions": {
        "test": "Run unit tests with PHPUnit",
        "phpstan": "Execute static analysis via PHPStan",
        "lint": "Check coding style using PHP-CS-Fixer"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "platform": { "php": "8.2" },
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.5.x-dev"
        }
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/vix-4800"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^2.1",
        "peckphp/peck": "^0.1.3"
    }
}
