#!/usr/bin/env php
<?php

declare(strict_types=1);

require_once dirname(__DIR__) . '/bootstrap.php';

use Vix\Syntra\Application;

try {
    $application = new Application(version: '1.5.0');
    $application->run();
} catch (Throwable $e) {
    fwrite(STDERR, "CRITICAL ERROR: " . $e->getMessage() . "\n");
    exit(1);
}
